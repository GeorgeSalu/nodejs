<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulario de cadastro de Noticia</title>
		</head>
	<body>

		<h1>Adicionar noticia</h1>

		<% if(validacao) { %>
			<ul>
				<% for(var i = 0; i < validacao.length; i++) { %>
					<li>
						<%= validacao[i].msg %>
					</li>
				<% } %>
			</ul>
		<% } %>

		<form action="/noticias/salvar" method="POST">
			<label>Titulo</label>
			<input type="text" id="titulo" name="titulo" placeholder="Titulo Da Noticia">
			<br/>

			<label>Resumo</label>
			<input type="text" id="resumo" name="resumo" placeholder="Resumo da Noticia">
			<br/>

			<label>Nome autor</label>
			<input type="text" id="autor" name="autor" placeholder="Autor da Noticia">
			<br/>

			
			<label>Data Dos Fatos</label>
			<input type="date" id="data_noticia" name="data_noticia" placeholder="Autor da Noticia">
			<br/>

			<label>Noticia</label>
			<textarea id="noticia" name="noticia" rows="5" cols="30"></textarea>
			<br/>

			<input type="submit" value="Enviar" />
		</form>

	</body>
</html>